PROGRAM = test3

OCAMLFLAGS = -ppx $(ROOT)/src/ppx_stream

FILES = $(removesuffix $(glob *.ml))
OCamlProgram($(PROGRAM), $(FILES))

.DEFAULT: $(PROGRAM)

.PHONY: clean
clean:
	rm -f $(filter-proper-targets $(glob $(addsuffix .*, $(FILES)))) $(PROGRAM) $(PROGRAM).opt $(addsuffix .cmo, $(FILES))
